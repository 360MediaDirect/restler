{
  "name": "@360mediadirect/restler",
  "version": "1.1.1",
  "description": "AWS Lambda handler for Express-based REST controllers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Tom Shawver <tom@360mediadirect.com>",
  "license": "UNLICENSED",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc",
    "test": "LOG_SILENT=1 jest test --coverage",
    "clean": "rm -rf node_modules dist"
  },
  "files": [
    "./dist/*"
  ],
  "dependencies": {
    "@360mediadirect/log": "^1.1.1",
    "aws-serverless-express": "^3.4.0",
    "embassy": "^2.0.4",
    "express": "^4.17.1",
    "express-openapi-validator": "^5.1.6",
    "http-errors": "^2.0.0",
    "qs": "^6.10.1",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.111",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/shortid": "^0.0.32",
    "@types/supertest": "^6.0.2",
    "aws-sdk": "^2.1608.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.spec.{js,ts}?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
